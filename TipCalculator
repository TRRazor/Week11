//Imports the required methods
import javafx.application.Application;
import javafx.stage.Stage;
import javafx.scene.Scene;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.control.Button;
import javafx.scene.layout.VBox;
import javafx.geometry.Pos;
import javafx.geometry.Insets;

/*
*  This class demonstrates the TipCalculator program
*/
public class TipCalculator extends Application
{
   //Calls the launch method inherited from the Application class
   public static void main(String[] args)
   {
      launch(args);
   }
   
   /*
   * The purpose of this class is to piece together the layout of
   * a tipping calculator. Nothing is returned. 
   * @param primaryStage the stage that contains the window alongside its layout scene and nodes
   */
   @Override
   public void start (Stage primaryStage)
   {
      primaryStage.setTitle("Tip calculator");
      
      Label rCharge = new Label("Restaurant Charge");
      TextField textField = new TextField();
      Button calculateButton = new Button("Calculate tip");
      Label amtLabel = new Label("Restaurant Charge");
      Label calculatedTip = new Label("");
      
      calculateButton.setOnAction(event ->
      {
         double input = Double.parseDouble(textField.getText());
         double tip = input * .2;
         calculatedTip.setText(String.format("%,.2f", tip));                  
      });
      
      VBox vbox = new VBox(rCharge, textField, calculateButton, amtLabel, calculatedTip);
      vbox.setPadding(new Insets(10));
      vbox.setSpacing(10);

      vbox.setAlignment(Pos.CENTER);
      
      Scene scene = new Scene(vbox);
      primaryStage.setScene(scene);
      primaryStage.show();
   }

}
